{
  "manifest_version": 3,
  "name": "Naina Assistant",
  "description": "Hyrbid AI Agent Powered by Chrome Built-in AI Gemini Nano. Work Online and Offline both.",
  "version": "1.0",
  "icons": {
    "16": "images/naina-icon.png",
    "32": "images/naina-icon.png",
    "48": "images/naina-icon.png",
    "128": "images/naina-icon.png"
  },
  "permissions": ["scripting", "activeTab", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Naina Assistant",
    "default_icon": {
      "16": "images/naina-icon.png",
      "32": "images/naina-icon.png",
      "48": "images/naina-icon.png",
      "128": "images/naina-icon.png"
    }
  },
  "commands": {
    "toggle-naina": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q"
      },
      "description": "Toggle the Naina AI overlay"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
